{%
  set classes = [
    node.bundle|clean_class,
    node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
    'node',
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
  ]
%}
{% set destination = content.field_link[0]['#url']|render %}
<figure{{ attributes.addClass(classes) }}>
  {% if destination %}
  <a href="{{ destination }}" class="link--cover">{{ content.field_billboard_text['#items'].getValue()[0].value }}</a>
  {% endif %}
  {{ content.field_billboard_background }}
  <figcaption class="billboard__caption">
    <div class="l-contain">
      {{ content.field_billboard_text }}
      {% if content.field_billboard_subtitle %}<br/>{% endif %}
      {{ content.field_billboard_subtitle }}
    </div>
  </figcaption>
</figure>